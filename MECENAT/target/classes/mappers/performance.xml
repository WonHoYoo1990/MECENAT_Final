<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="performanceMapper">
	
	<resultMap type="performance" id="performanceResultSet">
	  	<result column="PERFO_NO" property="perfoNo"/>
	  	<result column="RENTAL_CODE" property="rentalCode"/>
	  	<result column="PERFO_TITLE" property="perfoTitle"/>
	  	<result column="GENRE_NAME" property="genreName"/>
	  	<result column="PERFO_START_DATE" property="perfoStartDate"/>
	  	<result column="PERFO_END_DATE" property="perfoEndDate"/>
	  	<result column="DIRECTO" property="directo"/>
	  	<result column="CAST" property="cast"/>
	  	<result column="PERFO_CONTENT" property="perfoContent"/>
	  	<result column="RUNNING_TIME" property="runningTime"/>
	  	<result column="AGE_LIMIT" property="ageLimit"/>
	  	<result column="PERFO_STATUS" property="perfoStatus"/>
	  	<result column="PRICE" property="price"/>
	  	<result column="ORIGIN_NAME" property="originName"/>
	  	<result column="CHANGE_NAME" property="changeName"/>
	</resultMap>
	
	<select id="selectPerformanceList" resultMap="performanceResultSet">
		SELECT *
		FROM PERFORMANCE
		WHERE PERFO_STATUS='Y'
	</select>
	
	<insert id="insertPerformance">
		INSERT INTO PERFORMANCE(PERFO_NO,
								RENTAL_CODE,
								PERFO_TITLE,
								GENRE_NAME,
								PERFO_START_DATE,
								PERFO_END_DATE,
								DIRECTO,
								CAST,
								PERFO_CONTENT,
								RUNNING_TIME,
								AGE_LIMIT,
								PERFO_STATUS,
								PRICE,
								ORIGIN_NAME,
								CHANGE_NAME)
							
						VALUES( SEQ_PERFONO.NEXTVAL,
								3,
								#{perfoTitle},
								#{genreName},
								#{perfoStartDate},
								#{perfoEndDate},
								#{directo},
								#{cast},
								#{perfoContent},
								#{runningTime},
								#{ageLimit},
								'Y',
								#{price},
								#{originName},
								#{changeName}
									)
		
	
	</insert>
	
	
	
	
	
	
	
	
	
	
	
</mapper>

















